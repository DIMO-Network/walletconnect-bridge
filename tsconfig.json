{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2016", "es2017", "es2018"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "allowJs": true
  },
  "includes": ["./src/**/*"]
}